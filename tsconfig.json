{
  "compilerOptions": {
    // "module": "UMD",
    // // "module": "umd",
    // "target": "ES2015",
    // "sourceMap": true,
    // "outDir": "./dist",
    // "noImplicitAny": true,
    // "declaration": true

    "module": "ESNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES6"],
    "skipLibCheck": true,
    "types": ["node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "allowImportingTsExtensions": true,
    // "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
